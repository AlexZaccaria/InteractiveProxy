{
    "root": true,
    "env": {
        "node": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "script"
    },
    "ignorePatterns": [
        "client/**",
        "node_modules/**"
    ],
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "no-empty": [
            "error",
            {
                "allowEmptyCatch": true
            }
        ],
        "no-control-regex": "off"
    }
}